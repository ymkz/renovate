{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":prNotPending",
    ":timezone(Asia/Tokyo)",
    ":labels(dependencies, renovate)",
    ":enableVulnerabilityAlertsWithLabel(vulnerabilities)"
  ],
  "automergeStrategy": "squash",
  "minimumReleaseAge": "7 days",
  "npm": {
    "extends": [
      "npm:unpublishSafe",
      "helpers:disableTypesNodeMajor"
    ],
    "major": {
      "automerge": false
    },
    "minor": {
      "automerge": true,
      "groupName": "npm minor updates"
    },
    "patch": {
      "automerge": true,
      "groupName": "npm patch updates"
    }
  },
  "gradle": {
    "major": {
      "automerge": false
    },
    "minor": {
      "automerge": true,
      "groupName": "gradle minor updates"
    },
    "patch": {
      "automerge": true,
      "groupName": "gradle patch updates"
    }
  },
  "github-actions":{
    "pinDigests": true,
    "major": {
      "automerge": false
    },
    "minor": {
      "automerge": true,
      "groupName": "github-actions minor updates"
    },
    "patch": {
      "automerge": true,
      "groupName": "github-actions patch updates"
    }
  }
}
