{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests",
    ":labels(dependencies, renovate)",
    ":enableVulnerabilityAlertsWithLabel(vulnerabilities)"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 2am and before 8am on monday"],
  "automergeStrategy": "squash",
  "minimumReleaseAge": "3 days",
  "packageRules": [
    { "matchUpdateTypes": ["minor", "patch", "digest"], "automerge": true, "automergeType": "pr", "automergeStrategy": "squash" },
    { "matchManagers": ["npm"], "groupName": "npm dependencies" },
    { "matchManagers": ["gradle"], "groupName": "Gradle dependencies" },
    { "matchManagers": ["github-actions"], "groupName": "GitHub Actions" }
  ]
}
